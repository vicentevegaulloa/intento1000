<h1>New User Form</h1>

<% if flash[:errors]%>
  <% flash[:errors].each do |error| %>
    <p style="color: red"><%= error %></p>
  <%end%>
<%end%>

<%= form_for @user do |f|%>
  <%= f.label :email%>
  <%= f.text_field :email %>
  <%= f.label :password%>
  <%= f.text_field :password %>
  <%= f.label :password_confirmation%>
  <%= f.text_field :password_confirmation %>

  <%= f.submit%>
<%end%>
